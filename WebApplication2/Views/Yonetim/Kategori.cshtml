@model IEnumerable<WebApplication2.Kategori>

@{
    ViewBag.Title = "Kategori";
}

<h2>Kategori</h2>

<p>
    @Html.ActionLink("Yeni Kategori", "KategoriEkle")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Adi)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "KategoriDüzenle", new { id=item.id }) 
         
            @Html.ActionLink("Sil", "KategoriSil", new { id=item.id })
        </td>
    </tr>
}

</table>
